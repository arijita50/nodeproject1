<div class="row mt-5">
    <div class="col-md-6 m-auto">
	    <h1>Add Product</h1>
        <div class="card card-body">
            <form action="/add_product" method="POST" enctype="multipart/form-data">
                <% include ./partials/messages %>
  
                 <div class="form-group">
                      <label for="product_title">Product Title</label>
                      <input
                        type="text"
                        id="product_title"
                        name="product_title"
                        class="form-control"
                        placeholder="Enter Product Title"
                        value="" 
			            required="required"
                      />
                </div>
                <div class="form-group">
                      <label for="product_description">Product Description</label>
                      <textarea
                        id="product_description"
                        name="product_description"
                        class="form-control"
                        placeholder="Enter Product Description"
			            required="required"
                        rows="3"
                      ></textarea>
                </div>
	              <div class="form-group">
		              <label for="product_price">Product Price</label>
		              <input
                        type="number"
                        id="product_price"
                        name="product_price"
                        class="form-control"
                        placeholder="Enter Product Price"
                        value=""
			            required="required"
                      />
	              </div>
				  <div class="form-group">
				    <label for="category_id">Category</label>
				    <% if (category_count > 0 ){ %>
                        <select class="form-control" id="category_id" name="category_id">
					        <% all_categories.forEach(function(add_category){ %>
							    <option value="<%= add_category._id %>"><%= add_category.category_title %></option>
					        <% }) %>
                        </select>
				    <% }else{ %>
					    <input
					        type="text"
					        id="category_id"
					        name="category_id"
					        class="form-control"
					        value="No Category Exists"
					        readonly
                            />
				    <% } %>
                </div>
                <div class="form-group">
			            <label for="product_image">Product Image</label>
			            <input
			            type="file"
			            id="product_image"
			            name="product_image"
			            class="form-control-file"
			            placeholder=""
			            value=""
                      />
                      <small id="fileHelp" class="form-text text-muted">This is some placeholder block-level help text for the above input. It's a bit lighter and easily wraps to a new line.</small>
	            </div>
    
                Status
                  <div class="form-check">
                    <label class="form-check-label">
                      <input type="radio" class="form-check-input" name="status" id="status1" value="1" checked="">
                      Active
                    </label>
                  </div>
                  <div class="form-check">
                  <label class="form-check-label">
                      <input type="radio" class="form-check-input" name="status" id="status2" value="0">
                      Inactive
                    </label>
                  </div>
                  <button type="submit" class="btn btn-primary ">Submit</button>
            </form>
    </div>
    </div>
</div>