<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-user-edit"></i> Edit Profile 
      </h1>
		<a href="/downloadFile" class="text-right">
			<i class="fas fa-download"></i>Download Profile
		</a>
		<% include ./partials/messages %>
      <form action="/edit_profile" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label for="name">First Name</label>
          <input
            type="name"
            id="first_name"
            name="first_name"
            class="form-control"
            placeholder="Enter First Name"
            value="<%=user.first_name %>" 
			required="required"
          />
        </div>
		<div class="form-group">
			<label for="name">Last Name</label>
			<input
			type="name"
			id="last_name"
			name="last_name"
			class="form-control"
			placeholder="Enter Last Name"
			value="<%=user.last_name %>"
        />
		</div>
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
            value="<%=user.email %>"
          />
        </div>
		  <% if (user.userimage) { %>
            <img src="/static/uploads/<%=user.userimage %>" alt="image" style="width:100px; height:100px">
		  <%} else { %>
            <img src="/static/images/no_person.jpg" alt=""<%=user.first_name %>" style="width:100px; height:100px">
		  <% } %>
		<div class="form-group">
			<label for="password2">Profile Image</label>
			<input
			type="file"
			id="userimage"
			name="userimage"
			class="form-control"
			placeholder=""
			value=""
          />
		</div>
        <button type="submit" class="btn btn-primary btn-block">
          Submit
        </button>
      </form>
    </div>
  </div>
</div>